<section id="contact">
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2>Now</h2>
      <hr class="star-primary">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">つぶやき</div>
        <table class="table">
          <tr>
            <th>ポジ/ネガ</th>
            <th>つぶやき</th>
            <th>科目番号</th>
            <th>日時</th>
            <th>削除</th>
          </tr>
          <% @posts.reverse %>
            <% @posts.each do |post| %>
              <tr>
                <% if post['text'] != '' %>
                  <% if post['score'] < -0.3 %>
                    <td><span class="label label-primary">Negative</span></td>
                  <% elsif post['score'] > 0.3 %>
                    <td><span class="label label-success">Positive</span></td>
                  <% else %>
                    <td><span class="label label-default">Not Sure</span></td>
                  <% end %>
                  <td><%= post['text']%></td>
                  <td><%= post['subject_kcode']%></td>
                  <td><%= post['created_at']%></td>
                  <td><a href="#">削除</a></td>
                <% end %>
              </tr>
            <% end %>
        </table>
        <div class="panel-footer"><div class="text-center"><%= paginate(@posts) %></div></div>
      </div>
    </div>
  </div>
</div>
</section>
