<div class="container">
  <div class="jumbotron">
    <h1>Now</h1>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">つぶやき</div>
    <ul class="list-group">
      <% @posts.reverse %>
      <% @posts.each do |post| %>
        <% if post['text'] != '' %>
          <%= link_to "#{post['text']}　　　#{post['subject_kcode']}　　　#{post['created_at']}" ,
           "/search/detail/#{post.subject_kcode}" ,{:class=>"list-group-item"} %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
