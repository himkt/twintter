<div class="container">
  <div class="jumbotron">
    <h1>Now</h1>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">つぶやき</div>
    <ul class="list-group">
      <% @posts.each do |post| %>
        <% if post['text'] != '' %>
          <a class="list-group-item"><%= "#{post['text']}　　　#{post['subject_kcode']}　　　#{post['created_at']}" %></a>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
