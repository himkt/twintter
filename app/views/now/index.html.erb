<section id="contact">
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2>Now - ALL</h2>
      <hr class="star-primary">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">つぶやき</div>
        <ul class="list-group">
          <% @posts.reverse %>
          <% @posts.each do |post| %>
            <% if post['text'] != '' %>
              <%= link_to "#{post['text']}　　　#{post['subject_kcode']}　　　#{post['created_at']}" ,
                "/search/detail/#{post.subject_kcode}" ,{:class=>"list-group-item"} %>
              <% end %>
            <% end %>
        </ul>
        <div class="panel-footer"><div class="text-center"><%= paginate(@posts) %></div></div>
      </div>
    </div>
  </div>
</div>
</section>
