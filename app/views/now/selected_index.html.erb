<section id="contact">
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2>Now - 
        <% @subject.each do |element| %>
          <%= element['kname'] %>
        <% end %></h2>
      <hr class="star-primary">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="panel panel-success">
        <div class="panel-heading">
          <%= form_for(@post, url: {:action=>'selected_index'}, html: { method: :post, role: 'form' }) do |f| %>
            <div class="col-xs-9">
              <%= f.text_field :text, class: 'form-control', placeholder: '今なにしてる?' %>
            </div>
            <%= submit_tag "つぶやく", class: 'btn btn-default' %>
          <% end %>
        </div>
        <ul class="list-group">
          <% @posts.reverse %>
          <% @posts.each do |post| %>
            <% if post['text'] != '' %>
              <%= link_to "#{post['text']}　　　#{post['subject_kcode']}　　　#{post['created_at']}" ,
                "/search/detail/#{post.subject_kcode}" ,{:class=>"list-group-item"} %>
              <% end %>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
</section>
